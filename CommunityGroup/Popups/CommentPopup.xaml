                                                                <Label Text="Email / Mobile Number" Style="{StaticResource CellDetailSmallStyle}" />
                                                            </StackLayout>
                                                        </StackLayout>
                                                        <Grid Grid.Column="2" Padding="5,10">
                                                            <control:CustomButton  CBImage="iconMore.png" CBImageWidthRequest="15" CBImageHeightRequest="15" CBHasShadow="false" CBPadding="5" StyleCorner="Default" VerticalOptions="Start"/>

