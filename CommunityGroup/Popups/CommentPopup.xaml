            <StackLayout Spacing="0" Grid.Row="0">
                <ListView x:Name="listViewCommentList" ItemsSource="{Binding CommentsList}" BackgroundColor="{StaticResource White}"  HasUnevenRows="True" CachingStrategy="RecycleElementAndDataTemplate" Footer=""  SeparatorVisibility="None" SeparatorColor="Transparent" VerticalOptions="EndAndExpand" >

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <ContentView Padding="0,0" BackgroundColor="{StaticResource White}">
