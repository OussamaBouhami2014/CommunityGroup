                                                        <FFTransformations:CircleTransformation />
                                                    </FF:CachedImage.Transformations>
                                                </FF:CachedImage>
                                            </StackLayout>-->


                                                <StackLayout>

                                                    <Label Text="{Binding CreatedByFullName}" TextColor="{StaticResource DarkTextColor}" FontSize="16" FontAttributes="Bold" />

                                                    <Label Text="{Binding Text}" TextColor="{StaticResource DarkTextColor}" FontSize="15" />
                                                    <StackLayout Orientation="Horizontal">
                                                        <control:CustomButton CBText="Like" CBTextColor="{StaticResource DarkTextColor}" CBImage="iconHeart.png" CBImageWidthRequest="15" CBImageHeightRequest="15" CBHasShadow="false" CBPadding="5" CBFontSize="12" StyleCorner="Default" />
                                                        <control:CustomButton CBText="4 Share" IsVisible="False" CBTextColor="{StaticResource DarkTextColor}" CBImage="iconShare.png" CBImageWidthRequest="15" CBImageHeightRequest="15" CBHasShadow="false" CBPadding="5" CBFontSize="12" StyleCorner="Default" />
                                                    </StackLayout>
                                                </StackLayout>

                                            </StackLayout>

