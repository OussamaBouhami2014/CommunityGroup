<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:CommunityGroup"
             xmlns:control="clr-namespace:CommunityGroup.Controls"
             x:Class="CommunityGroup.MainPage">
    <Grid  ColumnSpacing="10" VerticalOptions="Start" HeightRequest="200" BackgroundColor="Gray">
        
        <Image Grid.Column="0" Source="info.png" Aspect="AspectFill"/>
        <StackLayout Grid.Column="0" Orientation="Horizontal" VerticalOptions="EndAndExpand" Padding="10,15">
          <Frame BackgroundColor="{StaticResource Primary}" VerticalOptions="Start" HorizontalOptions="Start" Padding="5,1" HasShadow="false" IsClippedToBounds="true" CornerRadius="4">
                            <Label Text="{Binding CodeUnivers}" TextColor="White" FontSize="14" />
                        </Frame>
            <Label Text="{Binding Title}" Style="{StaticResource CellTitleStyle}"/>
        </StackLayout>

    </Grid>
</ContentPage>