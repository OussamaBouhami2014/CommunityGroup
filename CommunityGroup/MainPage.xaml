<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:CommunityGroup"
             xmlns:control="clr-namespace:CommunityGroup.Controls"
             x:Class="CommunityGroup.MainPage">
   <Grid  ColumnSpacing="10" VerticalOptions="Start" HeightRequest="200" >
        
        <Image Grid.Column="0" Source="{Binding ImageEvent}" Aspect="AspectFill"/>
        <StackLayout Grid.Column="0" Orientation="Horizontal" VerticalOptions="EndAndExpand" Padding="10,25">
          <Frame BackgroundColor="{StaticResource Primary}" WidthRequest="100" VerticalOptions="CenterAndExpand" HorizontalOptions="Start" Padding="5,1" HasShadow="false" IsClippedToBounds="true" CornerRadius="4">
                            <Label Text="text" TextColor="White" FontSize="14" />
                        </Frame>
            <Label Text="{Binding Title}" TextColor="{StaticResource White}"/>
        </StackLayout>

    </Grid>
</ContentPage>